
<%- include partials/profile.ejs %>
<h1 class="h2">Cars</h1>
</div>
					<div class="card mb-3">
						<div class="card-header">
							<i class="fas fa-dice"></i> &nbsp; Car List
						</div>
						<div class="card-body">
							<div class="table-responsive">
								<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
									<thead>
										<tr>
											<th>Rank</th>
											<th>Game Name</th>
											<th>Rating</th>
										</tr>
									</thead>
									<tfoot>
										<th colspan="2">Total: <i><%= ctx %></i></th>
										<th>Avg: <i><%= avg ? avg.toFixed(3) : 0.000 %></i></th>
									</tfoot>
									<tbody>
										<% for(var i=0; i<tbl.length; i++) { %>
										<tr>
											<td><%= tbl[i].ranking%></td>
											<td><%= tbl[i].game%></td>
											<td><%= tbl[i].rating%></td>
										</tr>
										<% } %>
									</tbody>
								</table>
							</div>
						</div>
						<div class="card-footer small text-muted"><span class="badge badge-pill badge-info"><%= game_msg %></span></div>
					</div>

					<div class="card mb-3">
						<div class="card-header">
							<i class="fas fa-dice-d20"></i> &nbsp; Add Car
						</div>
						<form method="post" action="/add_game">
							<div class="card-body">
								<div class="form-group row">
									<label for="email" class="col-sm-3 col-form-label"><b>User Email:</b></label>
									<div class="col-sm-9">
										<input type="text" required="required" readonly class="form-control-plaintext" id="username" value="<%= user %>" name="username">
									</div>
								</div>
								<div class="form-group row">
									<label for="gamename" class="col-sm-3 col-form-label"><b>Car License Plate:</b></label>
									<div class="col-sm-9">
										<input type="text" required="required" class="form-control" id="gamename" placeholder="Game Name" name="gamename" value="">
									</div>
								</div>
							</div>
							<div class="card-footer small text-muted"><button type="submit" class="btn btn-secondary">Add New Car</button></div>
						</form>
					</div>
				</div>
			</div>
		</div>
  </main>
</div>
</div>
		<%- include bottomscript.ejs %>
  </body>
</html>
