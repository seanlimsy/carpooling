<%- include partials/profile.ejs %>
<h1 class="h2">Advertised Journeys</h1>
</div>
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-dice-six"></i> &nbsp; New Journey
    </div>
    <form method="post" action="/add_journey">
        <div class="card-body">
            <div class="form-group row">
                <label for="username" class="col-sm-2 col-form-label"><b>User Email:</b></label>
                <div class="col-sm-10">
                    <input type="text" required="required" readonly class="form-control-plaintext" id="username"
                           value="<%= user %>" name="username">
                </div>
            </div>
            <div class="form-group row">
                <label for="carname" class="col-sm-2 col-form-label"><b>Car:</b></label>
                <div class="col-sm-4">
                    <select class="form-control" id="carname" name="carname">
                        <% for(var i = 0; i < cars.length; i++) { %>
                            <option name="carname" class="dropdown-item" href="#"><%= cars[i].car_model %>
                                - <%= cars[i].car_plate_no %></option>
                        <% } %>
                    </select>
                    <!-- <input type="text" required="required" class="form-control" id="carname" placeholder="Car" name="carname" value=""> -->
                </div>
                <label for="carmaxpass" class="col-sm-2 col-form-label"><b>Max Passengers:</b></label>
                <div class="col-sm-4">
                    <input type="number" min="1" step="1" max="7" required="required" class="form-control"
                           id="carmaxpass" placeholder="Max Passengers" name="carmaxpass">
                </div>
            </div>
            <div class="form-group row">
                <label for="pickuparea" class="col-sm-2 col-form-label"><b>Pickup Area:</b></label>
                <div class="col-sm-4">
                    <input type="text" required="required" class="form-control" id="pickuparea"
                           placeholder="Pickup Area" name="pickuparea" value="">
                </div>
                <label for="dropoffarea" class="col-sm-2 col-form-label"><b>Dropoff Area:</b></label>
                <div class="col-sm-4">
                    <input type="text" required="required" class="form-control" id="dropoffarea"
                           placeholder="Dropoff Area" name="dropoffarea" value="">
                </div>
            </div>
            <div class="form-group row">
                <label for="pickuptime" class="col-sm-2 col-form-label"><b>Pickup Time:</b></label>
                <div class="col-sm-4">
                    <input id="pickuptime" name="pickuptime" data-format="yyyy-MM-dd HH:mm:ss" type="text"
                           data-field="datetime" readonly>
                    <div id="dtBox"></div>
                </div>
                <label for="minbid" class="col-sm-2 col-form-label"><b>Min Bid:</b></label>
                <div class="col-sm-4">
                    <input type="number" min="0" required="required" class="form-control" id="minbid"
                           placeholder="Min Bid" name="minbid">
                </div>
            </div>
            <div class="form-group row">
                <label for="bidstart" class="col-sm-2 col-form-label"><b>Bid Start:</b></label>
                <div class="col-sm-4">
                    <input id="bidstart" name="bidstart" data-format="yyyy-MM-dd HH:mm:ss" type="text"
                           data-field="datetime" readonly>
                    <div id="dtBox" data-format="yyyy-MM-dd HH:mm:ss"></div>
                </div>
                <label for="bidend" class="col-sm-2 col-form-label"><b>Bid End:</b></label>
                <div class="col-sm-4">
                    <input id="bidend" data-format="yyyy-MM-dd HH:mm:ss" name="bidend" type="text" data-field="datetime"
                           readonly>
                    <div id="dtBox"></div>
                </div>
            </div>
        </div>
        <div class="card-footer small text-muted">
            <button type="submit" class="btn btn-secondary">Advertise Journey</button>
        </div>
    </form>
</div>

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-trophy"></i> &nbsp; Journey List
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Car</th>
                    <th>Max Passengers</th>
                    <th>Pickup Area</th>
                    <th>Pickup Time</th>
                    <th>Dropoff</th>
                    <th>Min Bid</th>
                    <th>Bid Start</th>
                    <th>Bid End</th>
					<th>Action</th>
                </tr>
                </thead>
                <tfoot>
                <th>Total: <i><%= ctx %></i></th>
                <!-- <th>Win: <i></i></th> -->
                <!-- <th>Avg: <i></i></th> -->
                </tfoot>
                <tbody>
                <% for(var i = 0; i < tbl.length; i++) { %>
                    <tr>
                        <td align="center"><%= tbl[i].car_plate_no %></td>
                        <td align="center"><%= tbl[i].max_passengers %></td>
                        <td align="center"><%= tbl[i].pick_up_area %> </td>
                        <td align="center"><%= tbl[i].pick_up_time.toDateString() %>
                            <br> <%= tbl[i].pick_up_time.toLocaleTimeString() %> </td>
                        <td align="center"><%= tbl[i].drop_off_area %></td>
                        <td align="center"><%= tbl[i].min_bid %></td>
                        <td align="center"><%= tbl[i].bid_start_time.toDateString() %>
                            <br> <%= tbl[i].bid_start_time.toLocaleTimeString() %></td>
                        <td align="center"><%= tbl[i].bid_end_time.toDateString() %>
							<br> <%= tbl[i].bid_end_time.toLocaleTimeString() %></td>
						<td align="center">
                            <form action="/del_journey" method="post">
                                <button type="submit" name="journey"
                                        value="<%= tbl[i].car_plate_no %>, <%= tbl[i].pick_up_time.toISOString() %>"
                                        class="btn btn-danger btn-sm">Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted"><span class="badge badge-pill badge-info"><%= journey_msg %></span></div>
</div>
<%- include partials/footer.ejs %>
</main>
</div>
</div>

<%- include bottomscript.ejs %>
</body>
</html>
